<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestVivu.Views.AboutPage"
             Title="Về chúng tôi"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="VivuLogo.png"></Image>

            <Label Text="Ứng dụng được viết bằng XAML và C# với Platform Xamarin!"
                   FontSize="20" FontAttributes="Bold"
                   HorizontalTextAlignment="Center">
            </Label>

            <Button Margin="0,10,0,0" Text="XEM THÊM" FontSize="Large"
                    Command="{Binding TapCommand}" TextColor="White" BackgroundColor="DeepSkyBlue"
                    CommandParameter="https://github.com/WeiShen7530/XamarinForms">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>